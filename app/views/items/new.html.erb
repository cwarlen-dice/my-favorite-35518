<%= form_with(model: @item_options, url: user_items_path(current_user.id), local: true) do |f| %>
<%= f.label :image %><br />
<%= f.file_field :image, accept: 'image/jpg,image/jpeg,image/png' %><br />
<%= f.label :画像タイトル %><br />
(未入力の場合は、アップロードファイル名)<br />
<%= f.text_field :name %><br />
<%= f.label :コメント %><br />
<%= f.text_area :comment %><br />
<%= f.label :タグ %><br />
<%= f.text_field :tag_name, class: 'tags', name: 'item_options[tags][]', id: 'tag-input-now'%><br />
<%= f.label :ジャンル %><br />
<%= f.collection_select(:genre_id, Genre.all, :id, :data, {}, {class:"select-box", id:"item-genre"}) %><br />
<%= f.submit "投稿" %>
<% end %>
