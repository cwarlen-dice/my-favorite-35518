<%= render "shared/header" %>

<%= form_with(model: @image_genre, url: items_path, local: true) do |f| %>
  <%= f.label :image %><br />
  <%= f.file_field :image, accept: 'image/jpg,image/jpeg,image/png' %><br />
  <%= f.label :name %><br />
  (未入力の場合は、アップロードファイル名になります)<br />
  <%= f.text_field :name %><br />
  <%= f.label :comment %><br />
  <%= f.text_area :comment %><br />
  <%= f.label :genre %><br />
  <%= f.collection_select(:genre_id, Genre.all, :id, :data, {}, {class:"select-box", id:"item-genre"}) %><br />
  <%= f.submit "投稿" %>
<% end %>
