<div class="vh-100 d-flex align-items-center justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "sessions-form my-1 ws-350"}) do |f| %>

  <h2 class="h2">Log in</h2>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="field">
    <%= f.label :nickname, class: "ft-20" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "w-100" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "ft-20" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, class: "ft-20" %>
  </div>
  <% end %>

  <div class="actions m-0">
    <%#= f.submit "Log in" %>
    <%= link_to("Log in", 'javascript:void(0);', class: "btn btn-primary text-decoration-none text-white", onclick: "document.querySelector('.sessions-form').submit();") %>
  </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
