<div class="vh-100 d-flex align-items-center justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "registration-form my-1 ws-350"}) do |f| %>

  <h2 class="h2">Sign up</h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mt-1">
    <%= f.label :nickname, class: "ft-20" %>
    <em class="ft-15">(一度決めたニックネームの変更はできません)</em><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "w-100" %>
  </div>

  <div class="mt-1">
    <%= f.label :password, class: "ft-20" %>
    <% if @minimum_password_length %>
    <em class="ft-15">(最低<%= @minimum_password_length %>文字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
  </div>

  <div class="mt-1">
    <%= f.label :password_confirmation, class: "ft-20" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
  </div>

  <div class="btns d-flex justify-content-between mt-1 p-0">
    <div class="actions m-0">
      <%= link_to("Sign up", 'javascript:void(0);', class: "btn btn-primary text-decoration-none text-white", onclick: "document.querySelector('.registration-form').submit();") %>
    </div>

    <div class="m-0">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
